{

  "include": [
    "src/**/*",
  ],
  "exclude": [
    "coverage",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
  ],
  "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": ["node", "express"] // Ensure express types are included
    },
}
